---
export const prerender = true;
const { navMenu, generalSettings } = Astro.props;
---

<header class="site__header">
	<div class="container">
		<div class="site__info">
			<h1>{generalSettings.title} w/ <strong>ASTRO</strong></h1>
			<p>{generalSettings.description}</p>
		</div>

		<nav>
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
				{
					navMenu.nodes.map((item) => (
						<li>
							<a href={item.uri || "/"}>{item.label}</a>
						</li>
					))
				}
			</ul>
		</nav>
	</div>
</header>

<style lang="scss">
	$gray: #939393;
	$red: #e74c3c;

	.site__header {
		padding: 0 15px;
		margin: 0;
		background-color: $gray;
		border-bottom: 1px solid #ddd;
		color: #fff;

		h1 {
			margin-top: 0;
			padding-top: 10px;
			color: $red;
			text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
			font-size: 2.5rem;
		}

		.container {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
		}

		nav {
			ul {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0;
				margin: 0;
				list-style: none;
				li {
					margin-left: 1rem;
					a {
						text-decoration: none;
						color: #000;
						font-weight: bold;
					}
					a:hover {
						text-decoration: underline;
					}
				}
			}
		}
	}
</style>
