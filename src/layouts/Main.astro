---
export const prerender = true;
import Header from "../components/Header.astro";
// import { getSiteInfo, getNavMenu } from "../lib/api/global";
// const { generalSettings } = await getSiteInfo();
// const { navMenu } = await getNavMenu();
// console.log(navMenu);
import { getHeaderData } from "../lib/api/components/header";
const { menuItems, generalSettings } = await getHeaderData();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>ðŸš€ - {generalSettings.title}</title>
		<meta name="description" content={generalSettings.description} />
	</head>
	<body>
		<main class="site">
			<Header generalSettings={generalSettings} navMenu={menuItems} />
			<hr />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html,
	body,
	main {
		height: 100%;
	}
	body {
		margin: 0;
		padding: 0;

		font-family: "Open Sans", sans-serif;
		font-size: 18px;
		background-color: #ececec;
	}
	main.site {
		background-color: #f7f7f7;
	}
	.container {
		width: 100%;
		max-width: 992px;
		margin: auto;
	}
	pre,
	code {
		width: 100%;
		max-width: 100%;
		display: block;
		white-space: pre-wrap;
		word-wrap: break-word;
	}
</style>
