---
export const prerender = true;
import MainLayout from "../layouts/Main.astro";

// import homepage query from api
import { getHomePageContent } from "../lib/api/pages/home";
const { pageBy } = await getHomePageContent();

/* Projects */
import ProjectsSection from "../components/ProjectsSection.astro";

/* Resume */
import ResumeSection from "../components/ResumeSection.astro";

/* Skills */
import SkillsSection from "../components/SkillsSection.astro";
---

<MainLayout title="Home Page">
	<section class="intro">
		<div class="container">
			{pageBy.title}
			<div class="content" set:html={pageBy.content} />
		</div>
	</section>

	<!-- Projects -->
	<ProjectsSection />

	<!-- Resume -->
	<ResumeSection />

	<!-- Skills -->
	<SkillsSection />

	<!-- Smooth Scrolling -->
	<script>
		// Scroll to specific values
		// scrollTo is the same
		window.scroll({
			top: 2500,
			left: 0,
			behavior: "smooth",
		});

		// Scroll certain amounts from current position
		window.scrollBy({
			top: 90, // could be negative value
			left: 0,
			behavior: "smooth",
		});
	</script>
</MainLayout>

<style lang="scss">
	@import "../styles/vars";

	.intro {
		.content {
			font-size: 18px;
			padding-top: 30px;
			padding-bottom: 50px;
			word-wrap: break-word;
			word-break: keep-all;
		}
	}
</style>
